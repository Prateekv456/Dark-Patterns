{
    "manifest_version": 3,
    "name": "Dark Patterns Detector",
    "version": "1.0",
    "description": "A simple browser extension",
    "permissions": [
      "activeTab"
    ],
    "icons": {
      "128": "img/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/content.js"]
      }
    ],
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": "img/icon.png"
    },
    "permissions": [
      "storage",
      "activeTab"
    ],
    "icons": {
      "128": "img/icon.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
   }
  }
